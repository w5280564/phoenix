<?xml version="1.0" encoding="utf-8"?>
<com.zhengshuo.phoenix.base.baseview.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_Src"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="middle"
    app:layout_collapseParallaxMultiplier="0.8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_Con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/back_Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/editUser_Tv_"
            android:layout_width="67dp"
            android:layout_height="28dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/card_edit"
            android:drawablePadding="@dimen/dp_10"
            android:drawableTint="@color/white"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:text="编辑资料"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/head_Img" />

        <!--        android:background="@drawable/interest_lable"-->
        <TextView
            android:id="@+id/follow_Tv"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:text="关注"
            android:textColor="@color/text_color_444444"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        android:background="@drawable/message_bg"-->
        <TextView
            android:id="@+id/send_Mes"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="私信"
            android:textColor="@color/color_444444"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/follow_Tv"
            app:layout_constraintEnd_toStartOf="@id/follow_Tv"
            app:layout_constraintTop_toTopOf="@id/follow_Tv" />


        <ImageView
            android:id="@+id/head_Img"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginStart="50dp"
            android:layout_marginTop="45dp"
            android:background="@mipmap/xiangji"
            app:layout_constraintStart_toStartOf="@id/head_Img"
            app:layout_constraintTop_toTopOf="@id/head_Img" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="18dp"
            android:maxLength="10"
            android:text="林允儿的迷妹"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/head_Img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="11dp" />

        <TextView
            android:id="@+id/phoenixNumber_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:baselineAlignBottom="true"
            android:maxLines="1"
            android:text="凤凰号：12359452"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/ip_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="IP属地：上海"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="10sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/phoenixNumber_Tv"
            app:layout_constraintTop_toBottomOf="@+id/phoenixNumber_Tv" />


        <TextView
            android:id="@+id/tv_follow_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_19"
            android:text="1223"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head_Img" />

        <TextView
            android:id="@+id/textview10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="关注"
            android:textColor="#99ffffff"
            android:textFontWeight="500"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/tv_follow_number"
            app:layout_constraintStart_toStartOf="@id/tv_follow_number"
            app:layout_constraintTop_toBottomOf="@id/tv_follow_number" />

        <TextView
            android:id="@+id/tv_fans_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_41"
            android:text="2345"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="15sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_follow_number"
            app:layout_constraintStart_toEndOf="@id/tv_follow_number" />

        <TextView
            android:id="@+id/textview11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="粉丝"
            android:textColor="#99ffffff"
            android:textFontWeight="500"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@id/tv_fans_number"
            app:layout_constraintStart_toStartOf="@id/tv_fans_number"
            app:layout_constraintTop_toBottomOf="@id/tv_fans_number" />

        <TextView
            android:id="@+id/zan_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.3w"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_fans_number"
            app:layout_constraintStart_toEndOf="@id/tv_fans_number"
            android:layout_marginStart="@dimen/dp_41"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textview12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获赞"
            app:layout_constraintStart_toStartOf="@id/zan_Tv"
            app:layout_constraintEnd_toEndOf="@id/zan_Tv"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@id/zan_Tv"
            android:textColor="#99ffffff"
            android:textSize="10sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/base_gradual_top"
                    app:layout_constraintTop_toBottomOf="@id/textview12">

                </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.zhengshuo.phoenix.base.baseview.DisInterceptNestedScrollView>