<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_loading_dialog_bag"
    android:orientation="vertical"
    android:gravity="center">

    <com.zhengshuo.phoenix.widget.ProgressWheel
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:clickable="false"
        android:gravity="center"
        wheel:matProg_barColor="@color/animal_color"
        wheel:matProg_progressIndeterminate="true"
        wheel:matProg_barWidth="4dp"/>

    <TextView
        android:id="@+id/tips_loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="努力加载中..."
        android:textColor="@color/animal_color"
        android:layout_marginBottom="5dp"
        android:textSize="16dp" />

</LinearLayout>