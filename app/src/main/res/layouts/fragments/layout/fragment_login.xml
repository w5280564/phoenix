<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.zhengshuo.phoenix.widget.ClearWriteEditText
            android:id="@+id/cet_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/color_444444"
            android:textColorHint="@color/color_999999" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">


        <com.zhengshuo.phoenix.widget.ClearWriteEditText
            android:id="@+id/cet_login_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/color_444444"
            android:textColorHint="@color/color_999999"  />


        <Button
            android:id="@+id/cet_login_send_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="4"
            android:background="@drawable/yuruan_login_btn_selector"
            android:clickable="false"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/yuruan_login_btn_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button_size" />

</LinearLayout>