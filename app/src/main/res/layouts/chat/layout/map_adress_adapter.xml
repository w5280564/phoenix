<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/adress_Txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="绿地中心B座(宏村与汤泉路交叉）"
        android:lines="1"
        android:textColor="@color/text_color_212121"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/content_txt"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical|left"
        android:lines="2"
        android:text="100米以内｜安徽省合肥市包河区宏村路"
        android:textColor="@color/text_color_8A8A8A"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_check"
        app:layout_constraintStart_toStartOf="@+id/adress_Txt"
        app:layout_constraintTop_toBottomOf="@+id/adress_Txt" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="17dp"
        android:layout_height="12dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        android:src="@mipmap/gouxuan"
        android:visibility="gone"/>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/text_color_efefef"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_txt"
        app:layout_constraintStart_toStartOf="@id/adress_Txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="13dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>