<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homemy.activity.Person_Edit">

    <com.zhengshuo.phoenix.widget.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBarLeftImg="@mipmap/fanhui"
        app:titleBarTitle="编辑资料" />

    <ImageView
        android:id="@+id/head_Img"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginStart="50dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/xiangji"
        app:layout_constraintStart_toStartOf="@id/head_Img"
        app:layout_constraintTop_toTopOf="@id/head_Img" />

    <com.zhengshuo.phoenix.widget.baseview.MyArrowItemView
        android:id="@+id/nickName_MyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:arrowItemAvatarHeight="@dimen/dp_12"
        android:layout_marginTop="30dp"
        app:arrowItemContent="已实名"
        app:arrowItemContentColor="@color/text_color_212121"
        app:arrowItemContentSize="15sp"
        app:arrowItemShowAvatar="false"
        app:arrowItemShowDivider="false"
        app:arrowItemTitle="名字"
        app:arrowItemTitleColor="@color/text_color_535353"
        app:arrowItemTitleSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="51dp"
        app:layout_constraintTop_toBottomOf="@id/head_Img" />

    <com.zhengshuo.phoenix.widget.baseview.MyArrowItemView
        android:id="@+id/phoenixNumber_MyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:arrowItemAvatarHeight="@dimen/dp_12"
        app:arrowItemContent="已实名"
        app:arrowItemContentColor="@color/text_color_212121"
        app:arrowItemContentSize="15sp"
        app:arrowItemShowAvatar="false"
        app:arrowItemShowDivider="false"
        app:arrowItemTitle="凤凰号"
        app:arrowItemTitleColor="@color/text_color_535353"
        app:arrowItemTitleSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="51dp"
        app:layout_constraintTop_toBottomOf="@id/nickName_MyView" />
    <com.zhengshuo.phoenix.widget.baseview.MyArrowItemView
        android:id="@+id/sex_MyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:arrowItemAvatarHeight="@dimen/dp_12"
        app:arrowItemContent="已实名"
        app:arrowItemContentColor="@color/text_color_212121"
        app:arrowItemContentSize="15sp"
        app:arrowItemShowAvatar="false"
        app:arrowItemShowDivider="false"
        app:arrowItemTitle="性别"
        app:arrowItemTitleColor="@color/text_color_535353"
        app:arrowItemTitleSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="51dp"
        app:layout_constraintTop_toBottomOf="@id/phoenixNumber_MyView" />

    <com.zhengshuo.phoenix.widget.baseview.MyArrowItemView
        android:id="@+id/birthday_MyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:arrowItemAvatarHeight="@dimen/dp_12"
        app:arrowItemContent="已实名"
        app:arrowItemContentColor="@color/text_color_212121"
        app:arrowItemContentSize="15sp"
        app:arrowItemShowAvatar="false"
        app:arrowItemShowDivider="false"
        app:arrowItemTitle="生日"
        app:arrowItemTitleColor="@color/text_color_535353"
        app:arrowItemTitleSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="51dp"
        app:layout_constraintTop_toBottomOf="@id/sex_MyView" />

    <com.zhengshuo.phoenix.widget.baseview.MyArrowItemView
        android:id="@+id/qrcode_MyView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:arrowItemAvatarHeight="@dimen/dp_12"
        app:arrowItemShowAvatar="false"
        app:arrowItemShowDivider="false"
        app:arrowItemTitle="二维码"
        app:arrowItemTitleColor="@color/text_color_535353"
        app:arrowItemTitleSize="15sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="51dp"
        app:layout_constraintTop_toBottomOf="@id/birthday_MyView" />


</androidx.constraintlayout.widget.ConstraintLayout>